<Window x:Class="MVVMGame.Views.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMGame.Views"
        mc:Ignorable="d"
        Title="GameOverWindow" Height="250" Width="600" Background="DarkSeaGreen">
    <ItemsControl Name="grid" >
        <TextBlock Text="{Binding GameOverMessage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </ItemsControl>
</Window>
